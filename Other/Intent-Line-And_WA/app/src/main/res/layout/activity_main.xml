<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ataufiq.intentline.MainActivity">

    <EditText
        android:id="@+id/et_id_line"
        android:hint="Masukkan id Line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Add Friend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="addFriend"/>
    <EditText
        android:id="@+id/et_template_message_line"
        android:hint="Masukkan Messagenya"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Template message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendText"/>
    <EditText
        android:id="@+id/et_nomor_handphone"
        android:hint="Masukkan Nomor Handphone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/et_template_message_wa"
        android:hint="Masukkan Pesan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:text="Whatsapp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="sendToWhatsapp"/>

</LinearLayout>
